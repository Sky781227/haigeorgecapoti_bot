.container
  .row
    %p
      %b
        Author:
      = @joke.user.first_name rescue nil
      = @joke.user.last_name rescue nil
    %p
      %b
        Content:
      = @joke.content
    %p
      %b
        Added on
      = @joke.created_at.strftime("%d/%m/%Y at %I:%M%p")
      
    %p
      = link_to "Edit", edit_joke_path(@joke), class: "btn btn-default"
    %p
      = link_to "Delete", joke_path(@joke), method: :delete, class: "btn btn-default", data: { confirm: 'Are you certain you want to delete this?' }