.container
  .row
    %p
      %b
        Author:
      = @food.user.first_name rescue nil
      = @food.user.last_name rescue nil
    %p
      %b
        Name:
      = @food.name
    %p
      %b
        Url:
      = link_to @food.url, @food.url
    %p
      %b
        Added on
      = @food.created_at.strftime("%d/%m/%Y at %I:%M%p")

    %p
      = link_to "Edit", edit_food_path(@food), class: "btn btn-default"
    %p
      = link_to "Delete", food_path(@food), method: :delete, class: "btn btn-default", data: { confirm: 'Are you certain you want to delete this?' }
